      <hr>
      
      <h1>Sign Up (New User)</h1>
      <div class="form">
        <% if (messages.success) { %>
          <p class="alert alert-success mb-3"><%- messages.success %></p>
          <% } %>
    
          <!-- <form method="POST" action="user_form" class="form-inline"> -->
          <form method="POST" action="user_form">
              <label for="user_id">User ID:</label>
              <input type="text" id="user_id" name="user_id" required>
              
              <label for="user_email">User Email:</label>
              <input type="text" id="user_email" name="user_email" required>
              
              <label for="user_password">User Password:</label>
              <input type="text" id="user_password" name="user_password" required>

              <label for="user_session_id">User Session ID:</label>
              <input type="text" id="user_session_id" name="user_session_id" required>

              <button type="submit" class="btn btn-primary">Sign Up</button>
            </form>
      </div>


    <title>Indeed Clone Show Profile</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/show_profile_style.css">
    <script src="https://kit.fontawesome.com/88ebba7a68.js" crossorigin="anonymous"></script>

</head>
<body>
    <div class="navbar">
        <nav class="navbar navbar-light">
            <a class="navbar-brand-logo" href="#">
              <img src="https://1000logos.net/wp-content/uploads/2023/01/Indeed-Logo-2004.png" width="170" height="70" class="d-inline-block" alt="logo">
            </a>
          </nav>
      
          <button type="button" class="btn btn-outline-primary"><a href="/resume">Upload your Resume</a></button>
          <button type="button" class="btn btn-outline-primary"><a href="/add_job">Post a Job Notification</a></button>
          <button type="button" class="btn btn-outline-primary"><a href="/show_job">Show Job Notifications</a></button>
          <button type="button" class="btn btn-outline-primary"><a href="/apply">Apply Job</a></button>          
          <button type="button" class="btn btn-outline-primary"><a href="/profile_update">Update the profile</a></button>
          <button type="button" class="btn btn-outline-primary"><a href="/logout/logout">Logout</a></button>
          
          
    </div>
    <hr>
    <h1>Show Profile</h1>
    <div class="form">
      <% if (messages.success) { %>
        <p class="alert alert-success mb-3"><%- messages.success %></p>
        <% } %>
  
        <!-- <form method="POST" action="user_form" class="form-inline"> -->
        <form method="POST" action="/show_profile/show_profile_table">
            <label for="user_email">user_email:</label>
            <input type="text" id="user_email" name="user_email" required>
            <br>
            <button type="submit" class="btn btn-primary">Show Profile</button>
          </form>
    </div>

    <div class="news-container">
      <hr>
      <div class="news-header">Indeed Trending</div>
